let creandoUsuario = false;

async function crearUsuario() {
    // Prevenir m√∫ltiples ejecuciones
    if (creandoUsuario) {
        console.log('üö´ Ya se est√° creando un usuario, ignorando...');
        return;
    }
    
    console.log('üñ±Ô∏è === INICIANDO CREACI√ìN DE USUARIO ===');
    creandoUsuario = true;
    
    const form = document.getElementById('createUsuarioForm');
    const formData = new FormData(form);
    const datos = Object.fromEntries(formData);
    
    console.log('üìã Datos del formulario:', datos);

    const submitButton = form.querySelector('button[type="submit"]');
    const originalText = submitButton.innerHTML;
    
    // Deshabilitar el bot√≥n
    submitButton.disabled = true;
    submitButton.innerHTML = '<i class="bi bi-hourglass-split me-1"></i> Guardando...';

    try {
        const inicio = Date.now();
        const response = await fetch('/api/usuarios', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(datos)
        });

        const tiempo = Date.now() - inicio;
        console.log(`‚è±Ô∏è Tiempo de respuesta: ${tiempo}ms`);
        console.log('üì® Estado de respuesta:', response.status);

        const data = await response.json();
        console.log('üì¶ Respuesta del servidor:', data);

        if (response.ok) {
            console.log('‚úÖ Usuario creado exitosamente');
            Swal.fire({
                icon: 'success',
                title: '√âxito',
                text: data.message
            });
            
            $('#createUsuarioModal').modal('hide');
            form.reset();
            await cargarUsuarios(currentPage);
        } else {
            console.error('‚ùå Error del servidor:', data.error);
            throw new Error(data.error);
        }
    } catch (error) {
        console.error('üí• Error en crearUsuario:', error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: error.message
        });
    } finally {
        // Rehabilitar el bot√≥n y resetear estado
        submitButton.disabled = false;
        submitButton.innerHTML = originalText;
        creandoUsuario = false;
        console.log('üîö === FIN DE CREAR USUARIO ===');
    }
}

