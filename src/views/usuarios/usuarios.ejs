                                <div class="fw-bold">${usuario.nombre} ${usuario.apellido}</div>
                                <small class="text-muted">${usuario.correo || 'Sin correo'}</small>
                            </div>
                        </div>
                    </td>
                    <td>
                        <span class="badge bg-secondary bg-opacity-25 text-dark">
                            ${usuario.cargo}
                        </span>
                    </td>
                    <td>
                        <small class="text-muted">
                            ${usuario.sede ? usuario.sede.nombre : 'Sin sede'}
                        </small>
                    </td>
                    <td>
                        <span class="badge ${usuario.equipos_activos_count > 0 ? 'bg-success' : 'bg-secondary'}">
                            ${usuario.equipos_activos_count || 0} activos
                        </span>
                    </td>
                    <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group">
                           
                            <button class="btn btn-outline-info" 
                                    onclick="verReporteIndividual(${usuario.id})"
                                    title="Ver en navegador">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            `).join('');
        }

        function mostrarCargaUsuariosReporte() {
            const tbody = document.getElementById('listaUsuariosReporte');
            tbody.innerHTML = `
                <tr>
                    <td colspan="6" class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Cargando usuarios...</span>
                        </div>
                        <p class="text-muted mt-2 mb-0">Cargando lista de usuarios...</p>
                    </td>
                </tr>
            `;
        }

        function mostrarErrorUsuariosReporte(mensaje) {
            const tbody = document.getElementById('listaUsuariosReporte');
            tbody.innerHTML = `
                <tr>
                    <td colspan="6" class="text-center py-4">
                        <i class="bi bi-exclamation-triangle text-danger display-4 mb-3"></i>
                        <p class="text-danger mb-2">${mensaje}</p>
                        <button class="btn btn-sm btn-outline-primary" onclick="cargarUsuariosParaReporte()">
                            <i class="bi bi-arrow-clockwise me-1"></i>Reintentar
                        </button>
                    </td>
                </tr>
            `;
        }

        function actualizarContadorUsuarios() {
            const contador = document.getElementById('contadorUsuarios');
            const total = todosLosUsuarios.length;
            const mostrando = usuariosFiltrados.length;
            
            if (total === mostrando) {
                contador.textContent = `${total} usuarios`;
            } else {
                contador.textContent = `${mostrando} de ${total} usuarios`;
            }
        }

        function filtrarUsuariosReporte() {
            const searchTerm = document.getElementById('searchUsuarioReporte').value.toLowerCase().trim();
            
            if (!searchTerm) {
                usuariosFiltrados = [...todosLosUsuarios];
            } else {
                usuariosFiltrados = todosLosUsuarios.filter(usuario => 
                    (usuario.nombre && usuario.nombre.toLowerCase().includes(searchTerm)) ||
                    (usuario.apellido && usuario.apellido.toLowerCase().includes(searchTerm)) ||
                    (usuario.cargo && usuario.cargo.toLowerCase().includes(searchTerm)) ||
                    (usuario.correo && usuario.correo.toLowerCase().includes(searchTerm)) ||
                    (usuario.sede && usuario.sede.nombre && usuario.sede.nombre.toLowerCase().includes(searchTerm)) ||
                    (usuario.departamento && usuario.departamento.nombre && usuario.departamento.nombre.toLowerCase().includes(searchTerm))
                );
            }
            
            renderizarListaUsuariosReporte();
            actualizarContadorUsuarios();
        }

        async function generarReporteIndividual(id) {
            try {
                const usuario = todosLosUsuarios.find(u => u.id === id);
                const nombreUsuario = usuario ? `${usuario.nombre} ${usuario.apellido}` : 'Usuario';
                
                Swal.fire({
                    title: 'Generando Reporte',
                    html: `
                        <div class="text-center">
                            <div class="spinner-border text-primary mb-3" role="status"></div>
                            <p class="mb-1">Preparando reporte para:</p>
                            <p class="fw-bold">${nombreUsuario}</p>
                            <small class="text-muted">Esto puede tomar unos segundos...</small>
                        </div>
                    `,
                    allowOutsideClick: false,
                    showConfirmButton: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });

                const response = await fetch(`/api/usuarios/${id}/reporte/pdf`);
                
                if (!response.ok) {
                    const errorData = await response.json();
                    throw new Error(errorData.error || 'Error al generar reporte');
                }

                const blob = await response.blob();
                
                $('#selectUsuarioReporteModal').modal('hide');
                
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.style.display = 'none';
                a.href = url;
                a.download = `reporte-usuario-${nombreUsuario.replace(/\s+/g, '-')}.pdf`;
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
                
                Swal.fire({
                    icon: 'success',
                    title: 'Reporte Generado',
                    html: `
                        <div class="text-center">
                            <i class="bi bi-check-circle text-success display-4 mb-3"></i>
                            <p>El reporte de <strong>${nombreUsuario}</strong> se ha descargado correctamente.</p>
                        </div>
                    `,
                    confirmButtonText: 'Aceptar',
                    timer: 3000
                });
                
            } catch (error) {
                console.error('Error generando reporte individual:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.message,
                    confirmButtonText: 'Entendido'
                });
            }
        }

        async function verReporteIndividual(id) {
            try {
                const usuario = todosLosUsuarios.find(u => u.id === id);
                const nombreUsuario = usuario ? `${usuario.nombre} ${usuario.apellido}` : 'Usuario';
                
                Swal.fire({
                    title: 'Preparando Vista',
                    html: `
                        <div class="text-center">
                            <div class="spinner-border text-info mb-3" role="status"></div>
                            <p class="mb-1">Cargando reporte de:</p>
                            <p class="fw-bold">${nombreUsuario}</p>
                            <small class="text-muted">Abriendo en nueva pestaña...</small>
                        </div>
                    `,
                    allowOutsideClick: false,
                    showConfirmButton: false,
                    timer: 2000
                });

                window.open(`/api/usuarios/${id}/reporte/ver`, '_blank');
                
                setTimeout(() => {
                    $('#selectUsuarioReporteModal').modal('hide');
                }, 1000);
                
            } catch (error) {
                console.error('Error viendo reporte individual:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.message,
                    confirmButtonText: 'Entendido'
                });
            }
        }

        function inicializarEventosModalReporte() {
            const searchInput = document.getElementById('searchUsuarioReporte');
            if (searchInput) {
                searchInput.addEventListener('input', debounce(filtrarUsuariosReporte, 300));
            }
            
            $('#selectUsuarioReporteModal').on('hidden.bs.modal', function () {
                document.getElementById('searchUsuarioReporte').value = '';
                usuariosFiltrados = [...todosLosUsuarios];
                renderizarListaUsuariosReporte();
                actualizarContadorUsuarios();
            });
            
            $('#selectUsuarioReporteModal').on('show.bs.modal', function () {
                cargarUsuariosParaReporte();
            });
        }
    </script>
</body>
</html>