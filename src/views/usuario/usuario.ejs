    const formatDate = (dateString) => {
        if (!dateString) return 'N/A';
        try {
            const date = new Date(dateString);
            return isNaN(date.getTime()) ? 'Fecha inválida' : 
                date.toLocaleDateString('es-ES', {
                    year: 'numeric',
                    month: '2-digit',
                    day: '2-digit'
                });
        } catch (error) {
            return 'Fecha inválida';
        }
    };

    usuarios.forEach(usuario => {
