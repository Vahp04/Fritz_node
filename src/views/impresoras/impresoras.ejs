            document.getElementById('filterDepartamento').value = currentFilters.departamento_id;
            document.getElementById('filterEstado').value = currentFilters.estado;
            
            const filtrosActivos = Object.values(currentFilters).filter(val => val !== '').length;
            const resultCount = document.getElementById('resultCount');
            
            if (filtrosActivos > 0) {
                resultCount.innerHTML = `Mostrando ${impresoras.length} de ${totalRecords} impresoras <span class="badge bg-warning ms-2">Filtrado</span>`;
            } else {
                resultCount.textContent = `Mostrando ${impresoras.length} de ${totalRecords} impresoras`;
            }
        }

