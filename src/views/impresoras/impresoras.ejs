        async function cargarImpresoras(page = 1) {
            try {
                currentPage = page;
                
                const params = new URLSearchParams();
                params.append('page', page);
                
                if (currentFilters.search) {
                    params.append('search', currentFilters.search);
                }
                if (currentFilters.sede_id) {
                    params.append('sede_id', currentFilters.sede_id);
                }
                if (currentFilters.departamento_id) {
                    params.append('departamento_id', currentFilters.departamento_id);
                }
                if (currentFilters.estado) {
                    params.append('estado', currentFilters.estado);
                }
                
                const url = `/api/impresoras?${params.toString()}`;
                console.log('Cargando impresoras con URL:', url);
                
                const response = await fetch(url);
                if (!response.ok) {
                    throw new Error('Error al cargar impresoras');
                }

                const data = await response.json();
                
                impresoras = data.impresoras || [];
                totalPages = data.pagination?.total || 1;
                totalRecords = data.pagination?.totalRecords || 0;
                
                if (data.filters) {
                    currentFilters = { ...currentFilters, ...data.filters };
                }
                
                actualizarResumen();
                renderizarImpresoras();
                renderizarPaginacion();
                actualizarEstadoFiltros();
                
            } catch (error) {
                console.error('Error:', error);
                mostrarError('No se pudieron cargar las impresoras');
            }
