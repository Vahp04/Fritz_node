async function actualizarConsumible() {
    const form = document.getElementById('editConsumibleForm');
    const formData = new FormData(form);
    const consumibleId = formData.get('id');

    // Recolectar datos de equipos del contenedor de edici√≥n
    const equiposContainerEdit = document.getElementById('equiposContainerEdit');
    const equipoItems = equiposContainerEdit.querySelectorAll('.equipo-item');
    
    if (equipoItems.length === 0) {
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Debe tener al menos un equipo del inventario'
        });
        return;
    }

    const equiposData = [];
    let hayErrores = false;

    equipoItems.forEach(item => {
        const stockId = item.querySelector('.equipo-select-edit').value;
        const cantidadInput = item.querySelector('input[name*="[cantidad]"]');
        const cantidad = cantidadInput ? parseInt(cantidadInput.value) : 0;

        if (!stockId || !cantidad) {
            hayErrores = true;
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Todos los campos de equipo deben estar completos'
            });
            return;
        }

        // Validar stock disponible
        const equipo = stockEquipos.find(e => e.id == stockId);
        if (equipo && equipo.cantidad_disponible < cantidad) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: `Stock insuficiente para ${equipo.marca} ${equipo.modelo}. Disponible: ${equipo.cantidad_disponible}, Solicitado: ${cantidad}`
            });
            hayErrores = true;
            return;
        }

        equiposData.push({
            stock_equipos_id: parseInt(stockId),
            cantidad: cantidad
        });
    });

    if (hayErrores) {
        return;
    }

    const datos = {
        nombre: formData.get('nombre'),
        sede_id: parseInt(formData.get('sede_id')),
        departamento_id: parseInt(formData.get('departamento_id')),
        fecha_enviado: formData.get('fecha_enviado'),
        detalles: formData.get('detalles'),
        equipos: equiposData
    };

    console.log('Datos a enviar para actualizar:', datos);

    try {
        const response = await fetch(`/api/consumibles/${consumibleId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(datos)
        });

        if (!response.ok) {
            const errorText = await response.text();
            throw new Error(errorText || 'Error del servidor');
        }

        const data = await response.json();

        Swal.fire({
            icon: 'success',
            title: '√âxito',
            text: data.message
        });
        $('#editConsumibleModal').modal('hide');
        form.reset();
        
        // Limpiar contenedor de equipos de edici√≥n
        document.getElementById('equiposContainerEdit').innerHTML = '';
        equipoCounterEdit = 0;
        
        await cargarConsumibles(currentPage);
        await cargarStockEquipos();
        
    } catch (error) {
        console.error('Error al actualizar:', error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: error.message || 'Error al actualizar el consumible'
        });
    }
}


