    const totalUnidades = consumibles.reduce((sum, consumible) => {
        if (!consumible || !consumible.consumible_equipos) {
            return sum + 0;
        }
        
        // Sumar todas las cantidades de los equipos asociados
        const sumaEquipos = consumible.consumible_equipos.reduce((sumEquipo, ce) => {
            return sumEquipo + (ce && ce.cantidad ? parseInt(ce.cantidad) : 0);
        }, 0);
        
        return sum + sumaEquipos;
    }, 0);

    const sedesUnicas = new Set(consumibles.filter(c => c && c.sede_id).map(c => c.sede_id)).size;
    const departamentosUnicos = new Set(consumibles.filter(c => c && c.departamento_id).map(c => c.departamento_id)).size;

