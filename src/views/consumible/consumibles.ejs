        async function crearConsumible() {
            const form = document.getElementById('createConsumibleForm');
            const formData = new FormData(form);

            // Validar que hay al menos un equipo seleccionado
            const equiposContainer = document.getElementById('equiposContainer');
            const equipoItems = equiposContainer.querySelectorAll('.equipo-item');
            
            if (equipoItems.length === 0) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Debe agregar al menos un equipo del inventario'
                });
                return;
            }

            // Recolectar datos de equipos
            const equiposData = [];
            let totalCantidad = 0;
            let hayErrores = false;

            equipoItems.forEach(item => {
                const stockId = item.querySelector('[name*="[stock_equipos_id]"]').value;
                const cantidad = parseInt(item.querySelector('[name*="[cantidad]"]').value);

                if (!stockId || !cantidad) {
                    hayErrores = true;
                    return;
                }

                // Validar stock disponible
                const equipo = stockEquipos.find(e => e.id == stockId);
                if (equipo && equipo.cantidad_disponible < cantidad) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: `Stock insuficiente para ${equipo.marca} ${equipo.modelo}. Disponible: ${equipo.cantidad_disponible}, Solicitado: ${cantidad}`
                    });
                    hayErrores = true;
                    return;
                }

                equiposData.push({
                    stock_equipos_id: parseInt(stockId),
                    cantidad: cantidad
                });

                totalCantidad += cantidad;
            });

            if (hayErrores) {
                return;
            }

            const datos = {
                nombre: formData.get('nombre'),
                sede_id: parseInt(formData.get('sede_id')),
                departamento_id: parseInt(formData.get('departamento_id')),
                fecha_enviado: formData.get('fecha_enviado'),
                detalles: formData.get('detalles'),
                equipos: equiposData,
                cantidad_total: totalCantidad
            };

            try {
                const response = await fetch('/api/consumibles', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(datos)
                });

                if (!response.ok) {
                    const errorText = await response.text();
                    throw new Error(errorText || 'Error del servidor');
                }

                const data = await response.json();

                Swal.fire({
                    icon: 'success',
                    title: '√âxito',
                    text: data.message
                });
                $('#createConsumibleModal').modal('hide');
                form.reset();
                
                // Limpiar contenedor de equipos
                document.getElementById('equiposContainer').innerHTML = '';
                equipoCounter = 0;
                
                await cargarConsumibles(currentPage);
                await cargarStockEquipos();
                
            } catch (error) {
                console.error('Error al crear:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.message || 'Error al crear el consumible'
                });
            }
        }

