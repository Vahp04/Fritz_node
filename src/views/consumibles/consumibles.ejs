        async function cargarConsumibles(page = 1) {
            try {
                currentPage = page;
                const params = new URLSearchParams();
                params.append('page', page);
            
                if (currentFilters.search) {
                    params.append('search', currentFilters.search);
                }
                if (currentFilters.sede_id) {
                    params.append('sede_id', currentFilters.sede_id);
                }
                if (currentFilters.departamento_id) {
                    params.append('departamento_id', currentFilters.departamento_id);
                }
            
                const url = `/api/consumibles?${params.toString()}`;
                console.log('Cargando consumibles con URL:', url);
            
                const response = await fetch(url);
                if (!response.ok) {
                    throw new Error('Error al cargar consumibles');
                }

                const data = await response.json();
                consumibles = data.consumibles || [];
                totalPages = data.pagination?.total || 1;
                totalRecords = data.pagination?.totalRecords || 0;

                if (data.filters) {
                    currentFilters = { ...currentFilters, ...data.filters };
                }
            
                debugConsumibles();
                actualizarResumen();
                renderizarConsumibles();
                renderizarPaginacion();
                actualizarEstadoFiltros();
            
            } catch (error) {
                console.error('Error:', error);
                mostrarError('No se pudieron cargar los consumibles');
            }
        }

        function actualizarEstadoFiltros() {
            document.getElementById('searchConsumible').value = currentFilters.search;
            document.getElementById('filterSede').value = currentFilters.sede_id;
            document.getElementById('filterDepartamento').value = currentFilters.departamento_id;
        
            const filtrosActivos = Object.values(currentFilters).filter(val => val !== '').length;
            const resultCount = document.getElementById('resultCount');
        
            if (filtrosActivos > 0) {
                resultCount.innerHTML = `Mostrando ${consumibles.length} de ${totalRecords} consumibles `;
            } else {
                resultCount.textContent = `Mostrando ${consumibles.length} de ${totalRecords} consumibles`;
            }
        }

        async function cargarSedes() {
            try {
                const response = await fetch('/api/sedes');
                if (!response.ok) {
                    throw new Error('Error al cargar sedes');
                }
                sedes = await response.json();
                renderizarSedes();
            } catch (error) {
                console.error('Error:', error);
            }
        }

        async function cargarDepartamentos() {
            try {
                const response = await fetch('/api/departamentos?all=true');
                if (!response.ok) {
                    throw new Error('Error al cargar departamentos');
                }
                departamentos = await response.json();
                renderizarDepartamentos();
                
            } catch (error) {
                console.error('Error:', error);
            }
        }

        async function cargarStockEquipos() {
        try {
            console.log('Iniciando carga de equipos consumibles...');
        
            const response = await fetch('/api/stock_equipos/consumibles');
            console.log('Response status:', response.status);
        
            if (!response.ok) {
                const errorText = await response.text();
                console.error('Error response:', errorText);
                throw new Error(`Error ${response.status}: ${errorText}`);
            }

            const data = await response.json();
            console.log('Equipos cargados:', data);
        
            stockEquipos = data.filter(equipo => {
                const esConsumible = equipo.tipo_equipo && 
                    equipo.tipo_equipo.nombre.toLowerCase().includes('consumible') ||
                    equipo.tipo_equipo.nombre.toLowerCase().includes('toners') ||
                    equipo.tipo_equipo.nombre.toLowerCase().includes('tinta') ||
                    equipo.tipo_equipo.nombre.toLowerCase().includes('cartucho');
                console.log(`Equipo ${equipo.marca} ${equipo.modelo}: ${esConsumible ? 'ES consumible' : 'NO es consumible'}`);
                return esConsumible;
            }) || [];
        
            console.log('Equipos consumibles filtrados:', stockEquipos.length);
        
            if (stockEquipos.length === 0) {
                console.warn('No se encontraron equipos de tipo consumible');
                console.log('Todos los equipos disponibles:', data);
            }
        
            } catch (error) {
            console.error('Error cargando equipos:', error);
            mostrarError('No se pudieron cargar los equipos consumibles disponibles: ' + error.message);
            }
        }

