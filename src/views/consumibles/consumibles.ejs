        function actualizarResumen() {
            const total = consumibles.length;
            const totalUnidades = consumibles.reduce((sum, consumible) => {
                if (!consumible || !consumible.consumible_equipos) {
                    return sum + 0;
                }
        
                const sumaEquipos = consumible.consumible_equipos.reduce((sumEquipo, ce) => {
                    return sumEquipo + (ce && ce.cantidad ? parseInt(ce.cantidad) : 0);
                }, 0);
        
                return sum + sumaEquipos;
            }, 0);

            const sedesUnicas = new Set(consumibles.filter(c => c && c.sede_id).map(c => c.sede_id)).size;
            const departamentosUnicos = new Set(consumibles.filter(c => c && c.departamento_id).map(c => c.departamento_id)).size;

            document.getElementById('totalConsumibles').textContent = total;
            document.getElementById('totalUnidades').textContent = totalUnidades.toLocaleString();
            document.getElementById('totalSedes').textContent = sedesUnicas;
            document.getElementById('totalDepartamentos').textContent = departamentosUnicos;
    
            console.log('Resumen actualizado:', {
                totalConsumibles: total,
                totalUnidades: totalUnidades,
                sedesUnicas: sedesUnicas,
                departamentosUnicos: departamentosUnicos,
                consumiblesData: consumibles.map(c => ({
                    id: c.id,
                    nombre: c.nombre,
                    equipos: c.consumible_equipos?.map(ce => ({cantidad: ce.cantidad})) || []
                }))
            });
        }

