    <script>
        // Variables globales
        let departamentos = [];

        // Cargar datos al iniciar
        document.addEventListener('DOMContentLoaded', function() {
            cargarDepartamentos();
            inicializarEventos();
        });

        // Cargar departamentos
        async function cargarDepartamentos() {
            try {
                const response = await fetch('/api/departamentos');
                
                if (!response.ok) {
                    throw new Error('Error al cargar departamentos');
                }

                departamentos = await response.json();
                renderizarDepartamentos();
                
            } catch (error) {
                console.error('Error:', error);
                mostrarError('No se pudieron cargar los departamentos');
            }
        }

        // Renderizar departamentos en la tabla
function renderizarDepartamentos() {
    const tbody = document.getElementById('departamentosTableBody');
    tbody.innerHTML = '';

    if (departamentos.length === 0) {
        tbody.innerHTML = `
            <tr>
                <td colspan="5" class="text-center py-4">
                    <i class="bi bi-person-badge display-4 text-muted mb-3"></i>
                    <p class="text-muted mb-0">No se encontraron departamentos</p>
                </td>
            </tr>
        `;
        return;
    }

    departamentos.forEach(departamento => {
        const row = document.createElement('tr');
        
        // Función para formatear fecha de manera segura
        const formatDate = (dateString) => {
            if (!dateString) return 'N/A';
            try {
                const date = new Date(dateString);
                return isNaN(date.getTime()) ? 'Fecha inválida' : 
                    date.toLocaleDateString('es-ES', {
                        year: 'numeric',
                        month: '2-digit',
                        day: '2-digit'
                    });
            } catch (error) {
                return 'Fecha inválida';
            }
        };
        
        row.innerHTML = `
            <td class="fw-bold">${departamento.id}</td>
            <td>
                <div class="d-flex align-items-center">
                    <div class="department-icon me-3">
                        ${departamento.nombre ? departamento.nombre.charAt(0).toUpperCase() : 'D'}
                    </div>
                    <div>
                        <div class="fw-bold">${departamento.nombre}</div>
                        <small class="text-muted">ID: ${departamento.id}</small>
                    </div>
                </div>
            </td>
            <td>
                <span class="badge rounded-pill bg-primary">
                    <i class="bi bi-people me-1"></i>
                    ${departamento.usuarios_count || 0} Usuarios
                </span>
            </td>
            <td>
                ${formatDate(departamento.createdAt)}
            </td>
            <td class="table-actions text-center">
                <button class="btn btn-sm btn-outline-info action-btn me-1" 
                        onclick="viewDepartment(${departamento.id})"
                        title="Ver">
                    <i class="bi bi-eye"></i>
                </button>
                <button class="btn btn-sm btn-outline-warning action-btn me-1" 
                        onclick="editDepartment(${departamento.id})"
                        title="Editar">
                    <i class="bi bi-pencil"></i>
                </button>
                <button class="btn btn-sm btn-outline-danger action-btn"
                        onclick="deleteDepartment(${departamento.id}, '${departamento.nombre}')"
                        title="Eliminar">
                    <i class="bi bi-trash3"></i>
                </button>
            </td>
        `;
        
        tbody.appendChild(row);
    });
}

            // ===== FUNCIONES UNIVERSALES PARA EL TEMA =====
    function applySavedTheme() {
        const savedTheme = localStorage.getItem('theme');
        const htmlElement = document.documentElement;
        
        if (savedTheme) {
            htmlElement.setAttribute('data-bs-theme', savedTheme);
            
            const themeIcon = document.querySelector('.theme-switcher i');
            if (themeIcon) {
                if (savedTheme === 'dark') {
                    themeIcon.classList.remove('bi-moon-stars');
                    themeIcon.classList.add('bi-sun');
                } else {
                    themeIcon.classList.remove('bi-sun');
                    themeIcon.classList.add('bi-moon-stars');
                }
            }
        } else {
            localStorage.setItem('theme', 'light');
        }
    }

    function toggleTheme() {
        const htmlElement = document.documentElement;
        const currentTheme = htmlElement.getAttribute('data-bs-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        const themeIcon = document.querySelector('.theme-switcher i');
        
        htmlElement.setAttribute('data-bs-theme', newTheme);
        
        if (themeIcon) {
            if (newTheme === 'dark') {
                themeIcon.classList.remove('bi-moon-stars');
                themeIcon.classList.add('bi-sun');
            } else {
                themeIcon.classList.remove('bi-sun');
                themeIcon.classList.add('bi-moon-stars');
            }
        }
        
        localStorage.setItem('theme', newTheme);
    }

    // ===== INICIALIZACIÓN =====
    document.addEventListener('DOMContentLoaded', function() {
        applySavedTheme();
        
        // Sidebar
        const sidebarToggle = document.getElementById('sidebarToggle');
        if (sidebarToggle) {
            sidebarToggle.addEventListener('click', function() {
                const sidebar = document.querySelector('.sidebar');
                sidebar.classList.toggle('sidebar-collapsed');
                
                const icon = this.querySelector('i');
                icon.classList.toggle('bi-chevron-double-left');
                icon.classList.toggle('bi-chevron-double-right');
            });
        }

        const mobileSidebarToggle = document.getElementById('mobileSidebarToggle');
        if (mobileSidebarToggle) {
            mobileSidebarToggle.addEventListener('click', function() {
                document.querySelector('.sidebar').classList.toggle('sidebar-collapsed');
            });
        }

        // Tema
        const themeSwitcher = document.querySelector('.theme-switcher');
        if (themeSwitcher) {
            themeSwitcher.addEventListener('click', toggleTheme);
