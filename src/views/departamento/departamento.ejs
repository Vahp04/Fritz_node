        // Inicializar eventos
        function inicializarEventos() {


            // Manejar logout
            document.getElementById('logoutForm').addEventListener('submit', function(e) {
                e.preventDefault();
                this.submit();
            });

            // Formulario de crear departamento
            document.getElementById('createDepartmentForm').addEventListener('submit', async function(e) {
                e.preventDefault();
                await crearDepartment();
            });

            // Formulario de editar departamento
            document.getElementById('editDepartmentForm').addEventListener('submit', async function(e) {
                e.preventDefault();
                await actualizarDepartment();
            });
        }

        // Funciones CRUD
        async function crearDepartment() {
            const form = document.getElementById('createDepartmentForm');
            const formData = new FormData(form);

            try {
                const response = await fetch('/api/departamentos', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${localStorage.getItem('user_token') || ''}`
                    },
                    body: JSON.stringify(Object.fromEntries(formData))
                });

                const data = await response.json();

                if (response.ok) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Éxito',
                        text: data.message
                    });
                    $('#createDepartmentModal').modal('hide');
                    form.reset();
                    await cargarDepartamentos();
                } else {
                    throw new Error(data.error);
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.message
                });
            }
        }

        async function editDepartment(id) {
            try {
                const response = await fetch(`/api/departamentos/${id}`);
                
                if (!response.ok) {
                    throw new Error('Error al cargar departamento');
                }

                const departamento = await response.json();
                
                document.getElementById('edit_department_id').value = departamento.id;
                document.getElementById('edit_nombre').value = departamento.nombre;
                
                $('#editDepartmentModal').modal('show');
                
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.message
                });
            }
        }

        async function actualizarDepartment() {
            const form = document.getElementById('editDepartmentForm');
            const formData = new FormData(form);
            const departmentId = formData.get('id');

            try {
                const response = await fetch(`/api/departamentos/${departmentId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${localStorage.getItem('user_token') || ''}`
                    },
                    body: JSON.stringify(Object.fromEntries(formData))
                });

                const data = await response.json();

                if (response.ok) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Éxito',
                        text: data.message
                    });
                    $('#editDepartmentModal').modal('hide');
                    form.reset();
                    await cargarDepartamentos();
                } else {
                    throw new Error(data.error);
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.message
                });
            }
        }

        async function viewDepartment(id) {
            try {
                const response = await fetch(`/api/departamentos/${id}`);
                
                if (!response.ok) {
                    throw new Error('Error al cargar departamento');
                }

                const departamento = await response.json();
                
                document.getElementById('view_icon').textContent = departamento.nombre ? departamento.nombre.charAt(0).toUpperCase() : 'D';
                document.getElementById('view_nombre').textContent = departamento.nombre;
                document.getElementById('view_id').textContent = `ID: ${departamento.id}`;
                document.getElementById('view_department_id').textContent = departamento.id;
                document.getElementById('view_usuarios_count').innerHTML = departamento.usuarios_count ? 
                    `<span class="badge bg-primary">${departamento.usuarios_count} Usuarios</span>` : 
                    '<span class="badge bg-secondary">0 Usuarios</span>';
                document.getElementById('view_created').textContent = departamento.createdAt ? new Date(departamento.createdAt).toLocaleDateString('es-ES') : 'N/A';
                document.getElementById('view_updated').textContent = departamento.updatedAt ? new Date(departamento.updatedAt).toLocaleDateString('es-ES') : 'N/A';
                
                $('#viewDepartmentModal').modal('show');
                
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.message
                });
            }
        }

        async function deleteDepartment(id, nombre) {
            const result = await Swal.fire({
                title: '¿Estás seguro?',
                text: `Vas a eliminar el departamento "${nombre}". Esta acción no se puede deshacer.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#DC2626',
                cancelButtonColor: '#6B7280',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            });

            if (result.isConfirmed) {
                try {
                    const response = await fetch(`/api/departamentos/${id}`, {
                        method: 'DELETE',
                        headers: {
                            'Authorization': `Bearer ${localStorage.getItem('user_token') || ''}`
                        }
                    });

                    const data = await response.json();

                    if (response.ok) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Éxito',
                            text: data.message
                        });
                        await cargarDepartamentos();
                    } else {
                        throw new Error(data.error);
                    }
                } catch (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: error.message
                    });
                }
            }
        }

        // Funciones de utilidad
        function mostrarError(mensaje) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: mensaje
            });
        }
