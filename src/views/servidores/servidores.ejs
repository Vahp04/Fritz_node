    <script>
        // Variables globales
        let servidores = [];
        let sedes = [];
        let stockEquipos = [];
        let currentPage = 1;
        let totalPages = 1;
        let totalRecords = 0;
        let currentFilters = {
            search: '',
            sede_id: '',
            estado: ''
        };
        // Enviar datos al iniciar
        document.addEventListener('DOMContentLoaded', function() {
            cargarServidores();
            cargarSedes();
            cargarStockEquipos();
            inicializarEventos();
            applySavedTheme();
            inicializarSidebar();
        });

  
        async function cargarServidores(page = 1) {
            try {
                currentPage = page;
                
                const params = new URLSearchParams();
                params.append('page', page);
                
                if (currentFilters.search) {
                    params.append('search', currentFilters.search);
                }
                if (currentFilters.sede_id) {
                    params.append('sede_id', currentFilters.sede_id);
                }
                if (currentFilters.estado) {
                    params.append('estado', currentFilters.estado);
                }
                
                const url = `/api/servidores?${params.toString()}`;
                console.log('Cargando servidores con URL:', url);
                
                const response = await fetch(url);
                if (!response.ok) {
                    throw new Error('Error al cargar servidores');
                }

                const data = await response.json();
                
                servidores = data.servidores || [];
                totalPages = data.pagination?.total || 1;
                totalRecords = data.pagination?.totalRecords || 0;

                if (data.filters) {
                    currentFilters = { ...currentFilters, ...data.filters };
                }
                
                actualizarResumen();
                renderizarServidores();
                renderizarPaginacion();
                actualizarEstadoFiltros();
                
            } catch (error) {
                console.error('Error:', error);
                mostrarError('No se pudieron cargar los servidores');
            }
        }

        function actualizarEstadoFiltros() {
            document.getElementById('searchServidor').value = currentFilters.search;
            document.getElementById('filterSede').value = currentFilters.sede_id;
            document.getElementById('filterEstado').value = currentFilters.estado;
            
            const filtrosActivos = Object.values(currentFilters).filter(val => val !== '').length;
            const resultCount = document.getElementById('resultCount');
            
            if (filtrosActivos > 0) {
                resultCount.innerHTML = `Mostrando ${servidores.length} de ${totalRecords} servidores <span class="badge bg-warning ms-2"></span>`;
            } else {
                resultCount.textContent = `Mostrando ${servidores.length} de ${totalRecords} servidores`;
            }
        }

        async function cargarSedes() {
            try {
                const response = await fetch('/api/sedes');
                
                if (!response.ok) {
                    throw new Error('Error al cargar sedes');
                }

                sedes = await response.json();
                renderizarSedes();
                
            } catch (error) {
                console.error('Error:', error);
            }
        }

        async function cargarStockEquipos() {
            try {
            
                let allEquipos = [];
                let page = 1;
                let hasMore = true;
                
                while (hasMore) {
                    const response = await fetch(`/api/stock_equipos?page=${page}&limit=100`);
                    
                    if (!response.ok) {
                        throw new Error('Error al cargar equipos del inventario');
                    }
                    
                    const data = await response.json();
                    const equipos = data.stockEquipos || data;
                    
                    if (!equipos || equipos.length === 0) {
                        hasMore = false;
                    } else {
                        allEquipos = allEquipos.concat(equipos);
                        page++;
                        
                        if (page > 10) {
                            hasMore = false;
                            console.warn('Límite de páginas alcanzado');
                        }
                    }
                }
                
                console.log(`${allEquipos.length} equipos totales cargados (de ${page-1} páginas)`);
                
                stockEquipos = allEquipos.filter(equipo => {
                    const tipoNombre = (equipo.tipo_equipo?.nombre || '').toLowerCase();
                    const esServidor = tipoNombre.includes('servidor') 
                                    tipoNombre.includes('server')|| 
                                    tipoNombre.includes('servidores');
                    
                    if (esServidor) {
                        console.log(`SERVIDOR: ${equipo.marca} ${equipo.modelo} (${tipoNombre})`);
                    }
                    
                    return esServidor;
                });
                
                console.log(`${stockEquipos.length} servidores encontrados`);
                
                renderizarStockEquipos();
                
            } catch (error) {
                console.error('Error cargando stock equipos:', error);
                mostrarError('No se pudieron cargar los servidores del inventario');
                stockEquipos = [];
                renderizarStockEquipos();
            }
        }

        function actualizarResumen() {
            const total = servidores.length;
            const activos = servidores.filter(s => s.estado === 'activo').length;
            const inactivos = servidores.filter(s => s.estado === 'inactivo').length;
            const mantenimiento = servidores.filter(s => s.estado === 'mantenimiento').length;
            const desuso = servidores.filter(s => s.estado === 'desuso').length;

            document.getElementById('totalServidores').textContent = total;
            document.getElementById('totalActivos').textContent = activos;
            document.getElementById('totalInactivos').textContent = inactivos;
            document.getElementById('totalMantenimiento').textContent = mantenimiento;
        }

        function renderizarServidores() {
            const tbody = document.getElementById('servidoresTableBody');
            tbody.innerHTML = '';

            if (servidores.length === 0) {
                tbody.innerHTML = `
