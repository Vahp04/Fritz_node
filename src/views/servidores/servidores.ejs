                return;
            }

            servidores.forEach(servidor => {
                const row = document.createElement('tr');
                
                row.innerHTML = `
                    <td class="fw-bold">${servidor.id}</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="servidor-icon me-3">
