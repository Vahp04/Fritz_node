            const result = await Swal.fire({
                title: '¿Estás seguro?',
                text: `Vas a eliminar el servidor "${nombre}". Esta acción no se puede deshacer.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#DC2626',
                cancelButtonColor: '#6B7280',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            });

            if (result.isConfirmed) {
                try {
                    const response = await fetch(`/api/servidores/${id}`, {
                        method: 'DELETE'
                    });

                    if (!response.ok) {
                        const errorText = await response.text();
                        throw new Error(errorText || 'Error del servidor');
                    }

                    const data = await response.json();

                    Swal.fire({
                        icon: 'success',
                        title: 'Éxito',
                        text: data.message
                    });
                    await cargarServidores(currentPage);
                    await cargarStockEquipos(); 
                        
                } catch (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: error.message || 'Error al eliminar el servidor'
                    });
                }
            }
        }

        function aplicarFiltros() {
            currentFilters = {
                search: document.getElementById('searchServidor').value,
                sede_id: document.getElementById('filterSede').value,
                estado: document.getElementById('filterEstado').value
            };
            
            currentPage = 1;
            cargarServidores(currentPage);
        }

        function aplicarBusquedaRapida() {
            currentFilters.search = document.getElementById('searchServidor').value;
            currentPage = 1;
            cargarServidores(currentPage);
        }

        function resetFiltros() {
            currentFilters = {
                search: '',
                sede_id: '',
                estado: ''
            };
            
            document.getElementById('searchServidor').value = '';
            document.getElementById('filterSede').value = '';
            document.getElementById('filterEstado').value = '';
            
            currentPage = 1;
            cargarServidores(currentPage);
        }

        function filtrarPorEstado(estado) {
            document.getElementById('filterEstado').value = estado;
            aplicarFiltros();
        }

        function mostrarError(mensaje) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: mensaje
            });
        }

        function applySavedTheme() {
            const savedTheme = localStorage.getItem('theme');
            const htmlElement = document.documentElement;
                
            if (savedTheme) {
                htmlElement.setAttribute('data-bs-theme', savedTheme);
                    
                const themeIcon = document.querySelector('.theme-switcher i');
                if (themeIcon) {
                    if (savedTheme === 'dark') {
                        themeIcon.classList.remove('bi-moon-stars');
                        themeIcon.classList.add('bi-sun');
                    } else {
                        themeIcon.classList.remove('bi-sun');
                        themeIcon.classList.add('bi-moon-stars');
                    }
                }
            } else {
                localStorage.setItem('theme', 'light');
            }
        }

        function toggleTheme() {
            const htmlElement = document.documentElement;
            const currentTheme = htmlElement.getAttribute('data-bs-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            const themeIcon = document.querySelector('.theme-switcher i');
                
            htmlElement.setAttribute('data-bs-theme', newTheme);
                
            if (themeIcon) {
                if (newTheme === 'dark') {
                    themeIcon.classList.remove('bi-moon-stars');
                    themeIcon.classList.add('bi-sun');
                } else {
                    themeIcon.classList.remove('bi-sun');
                    themeIcon.classList.add('bi-moon-stars');
                }
            }
                
            localStorage.setItem('theme', newTheme);
        }

        function inicializarSidebar() {
            const sidebarToggle = document.getElementById('sidebarToggle');
                if (sidebarToggle) {
                    sidebarToggle.addEventListener('click', function() {
                        const sidebar = document.querySelector('.sidebar');
                        sidebar.classList.toggle('sidebar-collapsed');
                        
                        const icon = this.querySelector('i');
                        icon.classList.toggle('bi-chevron-double-left');
                        icon.classList.toggle('bi-chevron-double-right');
                    });
                }

                const mobileSidebarToggle = document.getElementById('mobileSidebarToggle');
                if (mobileSidebarToggle) {
                    mobileSidebarToggle.addEventListener('click', function() {
                        document.querySelector('.sidebar').classList.toggle('sidebar-collapsed');
                    });
                }

                const themeSwitcher = document.querySelector('.theme-switcher');
                if (themeSwitcher) {
                    themeSwitcher.addEventListener('click', toggleTheme);
                }
        }

        function inicializarEventos() {
            document.getElementById('logoutForm').addEventListener('submit', function(e) {
                e.preventDefault();
                this.submit();
            });

            document.getElementById('createServidorForm').addEventListener('submit', async function(e) {
                e.preventDefault();
                await crearServidor();
            });

            document.getElementById('editServidorForm').addEventListener('submit', async function(e) {
                e.preventDefault();
                await actualizarServidor();
            });

            let searchTimeout;
            document.getElementById('searchServidor').addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(aplicarBusquedaRapida, 500);
            });

            document.getElementById('filterSede').addEventListener('change', aplicarFiltros);
            document.getElementById('filterEstado').addEventListener('change', aplicarFiltros);

        }

