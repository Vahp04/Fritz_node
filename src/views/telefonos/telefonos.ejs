        }

        async function cargarStockTelefonos() {
    try {
        console.log('Cargando TODOS los teléfonos para asignación...');
        const response = await fetch('/api/stock_equipos/para-telefonos-completo', {
            credentials: 'include',
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            }
