    <!-- Modal para Crear Asignación -->
    <div class="modal fade" id="createTelefonoAsignadoModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-telephone me-2"></i> Nueva Asignación de Teléfono
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="createTelefonoAsignadoForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Usuario*</label>
                                    <select class="form-select" name="usuarios_id" id="create_usuarios_id" required>
                                        <option value="">Seleccione un usuario</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Teléfono*</label>
                                    <select class="form-select" name="stock_equipos_id" id="create_stock_equipos_id" required>
                                        <option value="">Seleccione un teléfono</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Número de Teléfono*</label>
                                    <input type="text" class="form-control" name="num_telefono" placeholder="Ej: 12345678" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Línea Telefónica*</label>
                                    <input type="text" class="form-control" name="linea_telefono" placeholder="Ej: Línea Principal, Línea Secundaria" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">IP del Teléfono*</label>
                                    <input type="text" class="form-control" name="ip_telefono" placeholder="Ej: 192.168.1.100" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">MAC Address</label>
                                    <input type="text" class="form-control" name="mac_telefono" placeholder="Ej: 00:1A:2B:3C:4D:5E">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">IMEI del Teléfono*</label>
                                    <input type="text" class="form-control" name="mail_telefono" " required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Fecha de Asignación*</label>
                                    <input type="date" class="form-control" name="fecha_asignacion" required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-fritz">Guardar Asignación</button>
                    </div>
                </form>
            </div>
        </div>
