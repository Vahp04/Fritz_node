                text: 'Tu sesión ha expirado. Serás redirigido al login.',
                confirmButtonText: 'Ir al login',
                allowOutsideClick: false,
                allowEscapeKey: false
            }).then((result) => {
                window.location.href = '/login';
            });
        }

        async function cargarTelefonosAsignados(page = 1, filtros = {}) {
            try {
                currentPage = page;
                
                const params = new URLSearchParams({
                    page: page.toString(),
                    limit: '10'
                });
                
                if (filtros.usuario) params.append('usuario', filtros.usuario);
                if (filtros.telefono) params.append('telefono', filtros.telefono);
                if (filtros.num_telefono) params.append('num_telefono', filtros.num_telefono);
                
                console.log('Cargando teléfonos asignados con filtros:', params.toString());
                
                const response = await fetch(`/api/telefonos-asignados?${params.toString()}`, {
                    credentials: 'include',
                    headers: {
                        'Accept': 'application/json',
                        'Content-Type': 'application/json'
                    }
                });
                
                if (!response.ok) {
                    if (response.status === 401) {
                        console.error('Error 401: No autenticado');
                        manejarErrorAutenticacion();
                        return;
                    }
                    throw new Error(`Error HTTP: ${response.status}`);
                }

                const data = await response.json();
                console.log('Respuesta teléfonos asignados:', data);
                
                telefonosAsignados = Array.isArray(data.telefonosAsignados) ? data.telefonosAsignados : [];
                totalPages = data.pagination?.total || 1;
                totalRecords = data.pagination?.totalRecords || 0;
                
                console.log(`${telefonosAsignados.length} asignaciones cargadas (Página ${currentPage} de ${totalPages})`);
                
                if (telefonosAsignados.length > 0) {
                    console.log('Primera asignación:', telefonosAsignados[0]);
                }
                
                renderizarTelefonosAsignados();
                actualizarContadores();
                renderizarPaginacion();
                
            } catch (error) {
                console.error('Error:', error);
                if (error.message.includes('401') || error.message.includes('autenticación')) {
                    manejarErrorAutenticacion();
                }
                telefonosAsignados = [];
                renderizarTelefonosAsignados();
                
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'No se pudieron cargar los teléfonos asignados'
                });
            }
        }

        function llenarSelectUsuarios() {
            const createSelect = document.getElementById('create_usuarios_id');
            const editSelect = document.getElementById('edit_usuarios_id');
            const pdfSelect = document.getElementById('usuarioSeleccionado');

            const selects = [createSelect, editSelect, pdfSelect].filter(select => select !== null);

            selects.forEach(select => {
                select.innerHTML = '<option value="">Seleccione un usuario</option>';
                
                if (!usuarios || usuarios.length === 0) {
                    const option = document.createElement('option');
                    option.value = "";
                    option.textContent = "No hay usuarios disponibles";
                    select.appendChild(option);
                    return;
                }
                
                console.log(`Llenando select con ${usuarios.length} usuarios`);
                
                usuarios.forEach(usuario => {
                    if (!usuario || !usuario.id) return;
                    
                    const option = document.createElement('option');
                    option.value = usuario.id;
                    
                    let texto = `${usuario.nombre || ''} ${usuario.apellido || ''}`.trim();
                    
                    if (usuario.cargo) {
                        texto += ` - ${usuario.cargo}`;
                    }
                    
                    if (usuario.sede && usuario.sede.nombre) {
                        texto += ` (${usuario.sede.nombre})`;
                    }
                    
                    option.textContent = texto || `Usuario ${usuario.id}`;
                    select.appendChild(option);
                });
            });
            
            console.log('Selects de usuarios llenados correctamente');
        }

        function llenarSelectStockTelefonos(telefonosFiltrados = null) {
            const createSelect = document.getElementById('create_stock_equipos_id');
            const editSelect = document.getElementById('edit_stock_equipos_id');

            const selects = [createSelect, editSelect].filter(select => select !== null);
            
            const telefonos = telefonosFiltrados || stockTelefonos;

            selects.forEach(select => {
                select.innerHTML = '<option value="">Seleccione un teléfono</option>';
                
                if (!telefonos || telefonos.length === 0) {
                    const option = document.createElement('option');
                    option.value = "";
                    option.textContent = "No hay teléfonos disponibles";
                    select.appendChild(option);
                    return;
                }
                
                console.log(`Llenando select con ${telefonos.length} teléfonos`);
                
                telefonos.forEach(telefono => {
                    if (!telefono || !telefono.id) return;
                    
                    const option = document.createElement('option');
                    option.value = telefono.id;
                    
                    let texto = '';
                    if (telefono.marca && telefono.modelo) {
                        texto = `${telefono.marca} ${telefono.modelo}`;
                    } else if (telefono.nombre) {
                        texto = telefono.nombre;
                    } else {
                        texto = `Teléfono ${telefono.id}`;
                    }
                    
                    if (telefono.tipo_equipo && telefono.tipo_equipo.nombre) {
                        texto += ` (${telefono.tipo_equipo.nombre})`;
                    }
                    
                    if (telefono.cantidad_disponible !== undefined) {
                        texto += ` - ${telefono.cantidad_disponible} disponible${telefono.cantidad_disponible !== 1 ? 's' : ''}`;
                    }
                    
                    option.textContent = texto;
                    select.appendChild(option);
                });
            });
            
            console.log('Selects de teléfonos llenados correctamente');
        }

        function renderizarTelefonosAsignados() {
