                    option.textContent = texto;
                    
                    // DETECCI√ìN DE REQUIERE_IP Y REQUIERE_CEREAL
                    let requiereIP = false;
                    let requiereCereal = false;
                    
                    // Intentar todas las posibles formas de acceder a la informaci√≥n
                    if (equipo.tipo_equipo) {
                        requiereIP = Boolean(equipo.tipo_equipo.requiere_ip);
                        requiereCereal = Boolean(equipo.tipo_equipo.requiere_cereal);
                        console.log(`‚úÖ Equipo ${equipo.id}: desde tipo_equipo - IP: ${requiereIP}, Cereal: ${requiereCereal}`);
