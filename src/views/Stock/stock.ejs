        // Cargar equipos en stock
        async function cargarStockEquipos(page = 1) {
            try {
                currentPage = page;
                const response = await fetch(`/api/stock_equipos?page=${page}`);
                
                if (!response.ok) {
                    throw new Error('Error al cargar equipos');
                }

                const data = await response.json();
                
                stockEquipos = data.stockEquipos || [];
                totalPages = data.pagination?.total || 1;
                totalRecords = data.pagination?.totalRecords || 0;
                
                actualizarResumen(data);
                renderizarStockEquipos();
                renderizarPaginacion();
                
            } catch (error) {
                console.error('Error:', error);
                mostrarError('No se pudieron cargar los equipos');
            }
        }

        // Cargar tipos de equipo
        async function cargarTipoEquipos() {
            try {
                const response = await fetch('/api/tipo_equipo');
                
                if (!response.ok) {
                    throw new Error('Error al cargar tipos de equipo');
                }

                tipoEquipos = await response.json();
                renderizarTipoEquipos();
                
            } catch (error) {
                console.error('Error:', error);
            }
        }

        // Actualizar resumen
        async function actualizarResumen() {
            try {
                console.log('Intentando cargar resumen...');
                const response = await fetch('/api/stock_equipos/resumen');
                
                console.log('Response status:', response.status);
                console.log('Response ok:', response.ok);
                
                if (!response.ok) {
                    const errorText = await response.text();
                    console.error('Error response:', errorText);
                    throw new Error('Error al cargar resumen: ' + response.status);
                }

                const resumen = await response.json();
                console.log('Resumen recibido:', resumen);
                
                document.getElementById('totalEquipos').textContent = resumen.total_equipos || 0;
                document.getElementById('totalDisponibles').textContent = resumen.total_disponible || 0;
                document.getElementById('totalAsignados').textContent = resumen.total_asignado || 0;
                document.getElementById('stockBajoCount').textContent = resumen.stock_bajo_count || 0;
                
            } catch (error) {
                console.error('Error completo:', error);
                // Mostrar valores por defecto en caso de error
                document.getElementById('totalEquipos').textContent = '0';
                document.getElementById('totalDisponibles').textContent = '0';
                document.getElementById('totalAsignados').textContent = '0';
                document.getElementById('stockBajoCount').textContent = '0';
            }
        }

        // Renderizar equipos en la tabla
        function renderizarStockEquipos() {
            const tbody = document.getElementById('stockEquiposTableBody');
            tbody.innerHTML = '';

            if (stockEquipos.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="7" class="text-center py-4">
                            <i class="bi bi-box-seam display-4 text-muted mb-3"></i>
                            <p class="text-muted mb-0">No se encontraron equipos en stock</p>
                        </td>
                    </tr>
                `;
                return;
            }

            stockEquipos.forEach(equipo => {
                const isLowStock = equipo.cantidad_disponible <= equipo.minimo_stock && equipo.cantidad_disponible > 0;
                const isCriticalStock = equipo.cantidad_disponible === 0;
                
                const row = document.createElement('tr');
                if (isLowStock) row.classList.add('low-stock');
                if (isCriticalStock) row.classList.add('critical-stock');
                
                row.innerHTML = `
                    <td class="fw-bold">${equipo.id}</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="equipo-icon me-3">
                                ${equipo.marca ? equipo.marca.charAt(0).toUpperCase() : 'E'}
                            </div>
                            <div>
                                <div class="fw-bold">${equipo.marca} ${equipo.modelo}</div>
                                <small class="text-muted">${equipo.descripcion ? equipo.descripcion.substring(0, 25) + (equipo.descripcion.length > 25 ? '...' : '') : 'Sin descripción'}</small>
                            </div>
                        </div>
                    </td>
                    <td>
                        <span class="badge bg-secondary rounded-pill">
                            ${equipo.tipo_equipo ? equipo.tipo_equipo.nombre : 'Sin tipo'}
                        </span>
                    </td>
                    <td>
                        <div class="d-flex flex-column gap-1">
                            <span class="badge available-badge rounded-pill">
                                <i class="bi bi-check-circle me-1"></i>
                                ${equipo.cantidad_disponible} Disp.
                            </span>
                            <span class="badge assigned-badge rounded-pill">
                                <i class="bi bi-person-check me-1"></i>
                                ${equipo.cantidad_asignada} Asig.
                            </span>
                            <small class="text-muted">Mín: ${equipo.minimo_stock}</small>
                        </div>
                    </td>
                    <td>
                        <span class="currency">$${parseFloat(equipo.valor_adquisicion).toFixed(2)}</span>
                    </td>
                    <td>
                        ${new Date(equipo.fecha_adquisicion).toLocaleDateString('es-ES')}
                    </td>
                    <td class="table-actions text-center">
                        <button class="btn btn-sm btn-outline-info action-btn me-1" 
                                onclick="viewStockEquipo(${equipo.id})"
                                title="Ver">
