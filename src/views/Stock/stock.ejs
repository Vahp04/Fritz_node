        // Funciones CRUD
        async function crearStockEquipo() {
    const form = document.getElementById('createStockEquipoForm');
    const formData = new FormData(form);

    try {
        console.log('Datos a enviar:', Object.fromEntries(formData)); // Debug

        const response = await fetch('/api/stock_equipos', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(Object.fromEntries(formData))
        });

        console.log('Response status:', response.status);

        if (!response.ok) {
            const errorText = await response.text();
            console.error('Error response:', errorText);
            throw new Error(errorText || 'Error del servidor');
        }

        const data = await response.json();

        Swal.fire({
            icon: 'success',
            title: 'Éxito',
            text: data.message
        });
        $('#createStockEquipoModal').modal('hide');
        form.reset();
        calcularCantidadesNuevo();
        
        await cargarStockEquipos(currentPage);
        await actualizarResumen();
    } catch (error) {
        console.error('Error completo:', error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: error.message || 'Error al crear el equipo'
        });
    }
}

