        // Funciones de filtrado
        function aplicarFiltros() {
            const nameFilter = document.getElementById('searchName').value.toLowerCase();
            const tipoFilter = document.getElementById('filterTipo').value;
            const stockFilter = document.getElementById('filterStock').value;

            const rows = document.querySelectorAll('#stockEquiposTableBody tr');
            let visibleCount = 0;

            rows.forEach(row => {
                if (row.id === 'loadingRow') return;

                const name = row.querySelector('td:nth-child(2) .fw-bold').textContent.toLowerCase();
                const tipo = row.querySelector('td:nth-child(3) .badge').textContent.toLowerCase();
                const isLowStock = row.classList.contains('low-stock');
                const isCriticalStock = row.classList.contains('critical-stock');

                const nameMatch = !nameFilter || name.includes(nameFilter);
                const tipoMatch = !tipoFilter || row.querySelector('td:nth-child(3) .badge').textContent.includes(
                    tipoEquipos.find(t => t.id == tipoFilter)?.nombre || ''
                );
                let stockMatch = true;

                if (stockFilter === 'bajo') {
                    stockMatch = isLowStock;
                } else if (stockFilter === 'critico') {
                    stockMatch = isCriticalStock;
                }

                if (nameMatch && tipoMatch && stockMatch) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            document.getElementById('resultCount').textContent = 
                `Mostrando ${visibleCount} de ${totalRecords} equipos`;
        }

        function resetFiltros() {
            document.getElementById('searchName').value = '';
            document.getElementById('filterTipo').value = '';
            document.getElementById('filterStock').value = '';
            aplicarFiltros();
