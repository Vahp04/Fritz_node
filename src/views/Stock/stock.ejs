    const form = document.getElementById('editStockEquipoForm');
    const formData = new FormData(form);
    const equipoId = formData.get('id');

    try {
        console.log('Datos a actualizar:', Object.fromEntries(formData)); // Debug

        const response = await fetch(`/api/stock_equipos/${equipoId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(Object.fromEntries(formData))
        });

        console.log('Response status:', response.status);

        if (!response.ok) {
            const errorText = await response.text();
            console.error('Error response:', errorText);
