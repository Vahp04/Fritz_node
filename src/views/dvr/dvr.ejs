    <script>
        // Variables globales
        let dvrs = [];
        let sedes = [];
        let stockEquipos = [];
        let currentPage = 1;
        let totalPages = 1;
        let totalRecords = 0;
        let currentFilters = {
            search: '',
            sede_id: '',
            estado: ''
        };

        // Enviar datos al iniciar
        document.addEventListener('DOMContentLoaded', function() {
            cargarDvrs();
            cargarSedes();
            cargarStockEquipos();
            inicializarEventos();
            applySavedTheme();
            inicializarSidebar();
        });

        async function crearDvr() {
            const form = document.getElementById('createDvrForm');
            const formData = new FormData(form);
            const stockEquipoId = formData.get('stock_equipos_id');

            const datosEnvio = Object.fromEntries(formData);
            if (stockEquipoId === 'temp') {
                datosEnvio.stock_equipos_id = 1; 
                Swal.fire({
                    icon: 'warning',
                    title: 'Modo temporal',
                    text: 'Usando equipo genérico. Actualice el stock manualmente después.',
                    timer: 3000
                });
            }

            try {
                const response = await fetch('/api/dvrs', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(datosEnvio)
                });

                if (!response.ok) {
                    const errorText = await response.text();
                    throw new Error(errorText || 'Error del servidor');
                }

                const data = await response.json();

                Swal.fire({
                    icon: 'success',
                    title: 'Éxito',
                    text: data.message
                });
                
                $('#createDvrModal').modal('hide');
                form.reset();
                await cargarDvrs(currentPage);
                
            } catch (error) {
                console.error('Error creando DVR:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.message
                });
            }
        }

        function actualizarEstadoFiltros() {
            document.getElementById('searchDvr').value = currentFilters.search;
            document.getElementById('filterSede').value = currentFilters.sede_id;
            document.getElementById('filterEstado').value = currentFilters.estado;
            
            const filtrosActivos = Object.values(currentFilters).filter(val => val !== '').length;
            const resultCount = document.getElementById('resultCount');
            
            if (filtrosActivos > 0) {
                resultCount.innerHTML = `Mostrando ${dvrs.length} de ${totalRecords} DVRs <span class="badge bg-warning ms-2"></span>`;
            } else {
                resultCount.textContent = `Mostrando ${dvrs.length} de ${totalRecords} DVRs`;
            }
        }

        async function cargarSedes() {
            try {
                const response = await fetch('/api/sedes');
                
                if (!response.ok) {
                    throw new Error('Error al cargar sedes');
                }

                sedes = await response.json();
                renderizarSedes();
                
            } catch (error) {
                console.error('Error:', error);
            }
        }

        async function cargarStockEquipos() {
            try {
                console.log('Buscando equipos DVR específicos...');
                
                const response = await fetch('/api/stock_equipos/equipos/dvr');
                
                if (!response.ok) {
                    throw new Error(`Error ${response.status}: ${response.statusText}`);
                }

                stockEquipos = await response.json();
                
                console.log(`${stockEquipos.length} equipos DVR/cámaras DISPONIBLES encontrados`);
                
                if (stockEquipos.length === 0) {
                    console.log('No se encontraron equipos DVR disponibles');
                    
                    const todosResponse = await fetch('/api/stock_equipos/api?limit=50');
                    if (todosResponse.ok) {
                        const todos = await todosResponse.json();
                        const tiposConteo = {};
                        todos.forEach(equipo => {
                            const tipo = equipo.tipo_equipo?.nombre || 'Sin tipo';
                            tiposConteo[tipo] = (tiposConteo[tipo] || 0) + 1;
                        });
                        console.log('Tipos de equipos disponibles:', tiposConteo);
                    }
                }
                
                renderizarStockEquipos();
                
            } catch (error) {
                console.error('Error cargando equipos DVR:', error);
                stockEquipos = [];
                renderizarStockEquipos();
                
                Swal.fire({
                    icon: 'warning',
                    title: 'No se pudieron cargar los equipos DVR',
                    text: 'Por favor, verifique que existan equipos DVR en el inventario',
                    timer: 3000
                });
            }
        }

        function actualizarResumen() {
            const total = dvrs.length;
            const activos = dvrs.filter(d => d.estado === 'activo').length;
            const inactivos = dvrs.filter(d => d.estado === 'inactivo').length;
            const mantenimiento = dvrs.filter(d => d.estado === 'mantenimiento').length;
            const desuso = dvrs.filter(d => d.estado === 'desuso').length;

            document.getElementById('totalDvrs').textContent = total;
            document.getElementById('totalActivos').textContent = activos;
            document.getElementById('totalInactivos').textContent = inactivos;
            document.getElementById('totalMantenimiento').textContent = mantenimiento;

        
        }

        function renderizarDvrs() {
            const tbody = document.getElementById('dvrsTableBody');
            if (!tbody) return;

            if (dvrs.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="8" class="text-center py-5">
                            <div class="text-muted">
                                <i class="bi bi-camera-video display-4 mb-3"></i>
                                <h5>No hay DVRs registrados</h5>
                                <p class="mb-3">Puede crear el primer DVR usando el botón "Nuevo DVR"</p>
                                <button class="btn btn-fritz" data-bs-toggle="modal" data-bs-target="#createDvrModal">
                                    <i class="bi bi-plus-circle me-1"></i> Crear primer DVR
                                </button>
                            </div>
                        </td>
                    </tr>
                `;
                return;
            }

            let html = '';
            
            dvrs.forEach(dvr => {
                const estado = dvr.estado || 'inactivo';
                const estadoClass = `status-badge status-${estado}`;
                const estadoText = estado.charAt(0).toUpperCase() + estado.slice(1);
                
                const ipDisplay = dvr.ip_dvr ? `<span class="ip-address">${dvr.ip_dvr}</span>` : '<span class="text-muted">No asignada</span>';
                const macDisplay = dvr.mac_dvr ? `<span class="mac-address">${dvr.mac_dvr}</span>` : '<span class="text-muted">No asignada</span>';
                const serialDisplay = dvr.cereal_dvr || '<span class="text-muted">No asignado</span>';
                const switchDisplay = dvr.switch || '<span class="text-muted">No asignado</span>';
                const ubicacion = dvr.ubicacion || '<span class="text-muted">Sin ubicación</span>';
                const cantidadCam = dvr.cantidad_cam || 0;
                
                const sedeNombre = dvr.sede ? dvr.sede.nombre : 'Sin sede';
                const equipoNombre = dvr.stock_equipos ? 
                    `${dvr.stock_equipos.marca || ''} ${dvr.stock_equipos.modelo || ''}`.trim() : 
                    'No asignado';

                const fechaCreacion = dvr.created_at ? 
                    new Date(dvr.created_at).toLocaleDateString('es-ES') : 
                    'No disponible';

                html += `
                    <tr>
                        <td class="fw-bold">${dvr.id}</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="dvr-icon me-3">
                                    <i class="bi bi-camera-video"></i>
                                </div>
                                <div>
                                    <strong>${equipoNombre}</strong>
                                    <br>
                                    <small class="text-muted">${ubicacion}</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="small text-center">
                                <div><strong>IP:</strong> ${ipDisplay}</div>
                                <div><strong>MAC:</strong> ${macDisplay}</div>
                                <div><strong>Serial:</strong> ${serialDisplay}</div>
                            </div>
                        </td>
                        <td>
                            <div class="small">
                                <div><strong>Cámaras:</strong> ${cantidadCam}</div>
                                <div><strong>Switch:</strong> ${switchDisplay}</div>
                            </div>
                        </td>
                        <td>${sedeNombre}</td>
                        <td><span class="${estadoClass}">${estadoText}</span></td>
                        <td>${fechaCreacion}</td>
                        <td class="text-center table-actions">
                            <button class="btn btn-sm btn-outline-info action-btn" onclick="viewDvr(${dvr.id})" title="Ver detalles">
                                <i class="bi bi-eye"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-warning action-btn" onclick="editDvr(${dvr.id})" title="Editar">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger action-btn" onclick="deleteDvr(${dvr.id}, '${equipoNombre.replace(/'/g, "\\'")}')" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;
            });

            tbody.innerHTML = html;
        }

        async function cargarDvrs(page = 1) {
            try {
                currentPage = page;
                
                const params = new URLSearchParams();
                params.append('page', page);
                
                if (currentFilters.search) {
                    params.append('search', currentFilters.search);
                }
                if (currentFilters.sede_id) {
                    params.append('sede_id', currentFilters.sede_id);
                }
                if (currentFilters.estado) {
                    params.append('estado', currentFilters.estado);
                }
                
                const url = `/api/dvrs?${params.toString()}`;
                console.log('Cargando DVRs desde:', url);
                
                const response = await fetch(url);
                
                if (!response.ok) {
                    throw new Error(`Error HTTP: ${response.status}`);
                }

                const data = await response.json();
                console.log('Datos recibidos:', data);
                
                if (data.dvrs && Array.isArray(data.dvrs)) {
                    dvrs = data.dvrs;
                    totalPages = data.pagination?.total || 1;
                    totalRecords = data.pagination?.totalRecords || data.dvrs.length;
                    
                    console.log(`Cargados ${dvrs.length} DVRs`);
                    
                    dvrs.forEach((dvr, index) => {
                        console.log(`DVR ${index + 1}:`, {
                            id: dvr.id,
                            ubicacion: dvr.ubicacion,
                            descripcion: dvr.descripcion,
                            sede: dvr.sede?.nombre
                        });
                    });
                } else {
                    console.warn('Estructura de datos inesperada:', data);
                    dvrs = [];
                    totalPages = 1;
                    totalRecords = 0;
                }

                actualizarResumen();
                renderizarDvrs();
                renderizarPaginacion();
                actualizarEstadoFiltros();
                
            } catch (error) {
                console.error('Error cargando DVRs:', error);
                
                dvrs = [];
                renderizarDvrs();
                
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'No se pudieron cargar los DVRs: ' + error.message
                });
            }
        }


        function renderizarSedes() {
            const selects = ['filterSede', 'create_sede_id', 'edit_sede_id'];

            selects.forEach(selectId => {
                const select = document.getElementById(selectId);
                if (select) {
                    while (select.options.length > 1) {
                        select.remove(1);
                    }

                    sedes.forEach(sede => {
                        const option = document.createElement('option');
                        option.value = sede.id;
                        option.textContent = sede.nombre;
                        select.appendChild(option);
                    });
                }
            });
        }

        function renderizarStockEquipos() {
            const select = document.getElementById('create_stock_equipos_id');
            if (!select) {
                console.error('No se encontró el select de stock_equipos');
                return;
            }

            const currentValue = select.value;

            while (select.options.length > 1) {
                select.remove(1);
            }

            if (stockEquipos.length === 0) {
                const option = document.createElement('option');
                option.value = "";
                option.textContent = "No hay equipos DVR/cámaras disponibles";
                option.disabled = true;
                select.appendChild(option);
                
                const submitBtn = document.querySelector('#createDvrForm button[type="submit"]');
                if (submitBtn) {
                    submitBtn.disabled = true;
                    submitBtn.title = "No hay equipos disponibles en inventario";
                }
                return;
            }

            const submitBtn = document.querySelector('#createDvrForm button[type="submit"]');
            if (submitBtn) {
                submitBtn.disabled = false;
                submitBtn.title = "";
            }

            stockEquipos.forEach(equipo => {
                const option = document.createElement('option');
                option.value = equipo.id;
                
                const tipo = equipo.tipo_equipo?.nombre || 'Sin tipo';
                option.textContent = `${equipo.marca} ${equipo.modelo} (${tipo}) - ${equipo.cantidad_disponible} disponibles`;
                
                option.title = `Tipo: ${tipo}\nMarca: ${equipo.marca}\nModelo: ${equipo.modelo}\nDisponibles: ${equipo.cantidad_disponible}\nTotal: ${equipo.cantidad_total}`;
                
                if (currentValue == equipo.id) {
                    option.selected = true;
                }
                
                select.appendChild(option);
            });

            console.log(`Renderizados ${stockEquipos.length} equipos DVR/cámaras en el select`);
        }

        function renderizarPaginacion() {
            const pagination = document.getElementById('paginationContainer');
            if (!pagination) return;

            pagination.innerHTML = '';

            if (totalPages <= 1) {
                return;
            }

            const prevLi = document.createElement('li');
            prevLi.className = `page-item ${currentPage === 1 ? 'disabled' : ''}`;
            prevLi.innerHTML = `
                <a class="page-link" href="#" onclick="cambiarPagina(${currentPage - 1})" aria-label="Anterior">
                    <i class="bi bi-chevron-left"></i>
                </a>
            `;
            pagination.appendChild(prevLi);

            const maxPagesToShow = 5;
            let startPage = Math.max(1, currentPage - Math.floor(maxPagesToShow / 2));
            let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1);

            if (endPage - startPage + 1 < maxPagesToShow) {
                startPage = Math.max(1, endPage - maxPagesToShow + 1);
            }

            if (startPage > 1) {
                const firstLi = document.createElement('li');
                firstLi.className = 'page-item';
                firstLi.innerHTML = `<a class="page-link" href="#" onclick="cambiarPagina(1)">1</a>`;
                pagination.appendChild(firstLi);
                
                if (startPage > 2) {
                    const ellipsisLi = document.createElement('li');
                    ellipsisLi.className = 'page-item disabled';
                    ellipsisLi.innerHTML = `<span class="page-link">...</span>`;
                    pagination.appendChild(ellipsisLi);
                }
            }

            for (let i = startPage; i <= endPage; i++) {
                const pageLi = document.createElement('li');
                pageLi.className = `page-item ${i === currentPage ? 'active' : ''}`;
                pageLi.innerHTML = `<a class="page-link" href="#" onclick="cambiarPagina(${i})">${i}</a>`;
                pagination.appendChild(pageLi);
            }

            if (endPage < totalPages) {
                if (endPage < totalPages - 1) {
                    const ellipsisLi = document.createElement('li');
                    ellipsisLi.className = 'page-item disabled';
                    ellipsisLi.innerHTML = `<span class="page-link">...</span>`;
                    pagination.appendChild(ellipsisLi);
                }
                
                const lastLi = document.createElement('li');
                lastLi.className = 'page-item';
                lastLi.innerHTML = `<a class="page-link" href="#" onclick="cambiarPagina(${totalPages})">${totalPages}</a>`;
                pagination.appendChild(lastLi);
            }

            const nextLi = document.createElement('li');
            nextLi.className = `page-item ${currentPage === totalPages ? 'disabled' : ''}`;
            nextLi.innerHTML = `
                <a class="page-link" href="#" onclick="cambiarPagina(${currentPage + 1})" aria-label="Siguiente">
                    <i class="bi bi-chevron-right"></i>
                </a>
            `;
            pagination.appendChild(nextLi);
        }

